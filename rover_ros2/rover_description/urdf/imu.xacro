<?xml version='1.0'?>
<robot name="rerassor" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- Macro to add an IMU sensor to a given parent link -->
    <xacro:macro name="rerassor_imu" params="imu_prefix parent imu_size xyz rpy">
        <link name="${imu_prefix}_link">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.001"/>
                <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
            </inertial>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${imu_size} ${imu_size} ${imu_size}"/>
                </geometry>
            </collision>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="${imu_size} ${imu_size} ${imu_size}"/>
                </geometry>
                <material name="green"/>
            </visual>
        </link>
        <joint name="${imu_prefix}_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="${imu_prefix}_link"/>
            <origin xyz="${xyz}" rpy="${rpy}"/>
        </joint>
        <gazebo reference="${imu_prefix}_link">
            <sensor name="${imu_prefix}_sensor" type="imu">
                <always_on>true</always_on>
                <update_rate>100</update_rate>
                <visualize>true</visualize>
                <topic>data</topic>
                <!-- (Gazebo ROS IMU plugin removed for Gazebo Sim compatibility) -->
            </sensor>
        </gazebo>
    </xacro:macro>
</robot>
