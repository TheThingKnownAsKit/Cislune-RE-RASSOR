<?xml version='1.0'?>
<robot name="rerassor" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <!-- wheel.xacro -->
    <xacro:macro name="wheel" params="wheel_name parent_link radius width mass origin_xyz origin_rpy">
        <link name="${wheel_name}_link">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="${mass}"/>
                <xacro:cylinder_inertia m="${mass}" r="${radius}" h="${width}"/>
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry><cylinder radius="${radius}" length="${width}"/></geometry>
                <material name="Grey"/>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry><cylinder radius="${radius}" length="${width}"/></geometry>
                <surface><friction><mu>1.5</mu><mu2>1.5</mu2></friction></surface>
            </collision>
        </link>
        
        <joint name="${wheel_name}_joint" type="continuous">
            <parent link="${parent_link}"/>
            <child link="${wheel_name}_link"/>
            <origin xyz="${origin_xyz}" rpy="${origin_rpy}"/>
            <axis xyz="0 1 0"/>  <!-- assuming wheel rotates about the Y-axis of arm frame -->
            <dynamics damping="0.2"/>
        </joint>
    </xacro:macro>

</robot>
